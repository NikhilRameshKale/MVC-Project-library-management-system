@{
    ViewBag.Title = "Renew Book";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<style>
    .page-wrapper {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 50px 15px;
        background-color: #f2f4f8;
        min-height: 100vh;
    }

    .renew-form {
        background-color: #fff;
        padding: 30px 35px;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
    }

        .renew-form h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #222;
        }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            font-weight: 600;
            margin-bottom: 6px;
            color: #444;
        }

        .form-group input[type="text"],
        .form-group input[type="date"] {
            width: 473px;
            padding: 10px 12px;
            border-radius: 6px;
            border: 1px solid #ccc;
            font-size: 16px;
            transition: border-color 0.3s ease;
        }

        .form-group input:focus {
            border-color: #007bff;
            outline: none;
        }

    .submit-btn {
        background-color: #007bff;
        color: white;
        padding: 12px;
        width: 100%;
        font-size: 16px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .submit-btn:hover {
            background-color: #0056b3;
        }

    .info-box {
        display: none;
        margin-top: 25px;
        background: #f9f9f9;
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 15px 20px;
        color: #333;
    }

        .info-box p {
            margin: 6px 0;
            font-size: 15px;
        }
</style>

<div class="page-wrapper">
    <form class="renew-form" method="post" action="/Default/RenewBook">
        <h2>♻️ Renew Book</h2>

        <div class="form-group">
            <label for="transactionId">Transaction ID</label>
            <!-- Use name='issueId' so it matches controller parameter -->
            <input type="text" id="transactionId" name="issueId" placeholder="Enter Transaction ID" required />
        </div>

        <div class="form-group">
            <label for="newDueDate">New Due Date</label>
            <input type="date" id="newDueDate" name="newDueDate" required />
        </div>

        <button type="submit" class="submit-btn">Renew</button>

        <!-- Student Info Box -->
        <div id="issuedBookInfo" class="info-box">
            <p><strong>Student ID:</strong> <span id="studentId"></span></p>
            <p><strong>Book ID:</strong> <span id="bookId"></span></p>
            <p><strong>Issue Date:</strong> <span id="issueDate"></span></p>
            <p><strong>Due Date:</strong> <span id="dueDate"></span></p>
        </div>

        @if (TempData["Message"] != null)
        {
            <div style="background:#dff0d8; padding:10px; border-radius:6px; color:#3c763d; margin-bottom:15px;">
                @TempData["Message"]
            </div>
        }
    </form>
</div>

<script>
    document.getElementById("transactionId").addEventListener("blur", function () {
        const transactionId = this.value.trim();
        if (!transactionId) return;

        fetch(`/Default/GetIssuedBookByTransactionId?transactionId=${transactionId}`)
            .then(response => response.json())
            .then(data => {
                if (data) {
                    document.getElementById("issuedBookInfo").style.display = "block";
                    document.getElementById("studentId").textContent = data.StudentId;
                    document.getElementById("bookId").textContent = data.BookId;
                    document.getElementById("issueDate").textContent = data.IssueDate;
                    document.getElementById("dueDate").textContent = data.DueDate;
                } else {
                    document.getElementById("issuedBookInfo").style.display = "none";
                    alert("No record found for this Transaction ID.");
                }
            })
            .catch(error => {
                console.error("Error:", error);
                alert("Something went wrong. Please try again.");
            });
    });
</script>
